<table>
  <thead>
    <tr>
      <th>Title</th>
      <%# <th colspan="3">Actions</th> %>
    </tr>
  </thead>

  <tbody>
    <% items.each do |item| %>
      <tr class="<%= item.completed ? "completed" : "" %>">
        <td><%= item.title %></td>
        <td><%= link_to item.completed ? "Restart?" : "Finish!", list_item_path(list, item), method: :put %></td>
        <td><%= link_to 'Destroy', list_item_path(list, item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Item', new_list_item_path(@list) %>
